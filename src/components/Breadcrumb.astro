---
import { CONTENT_CONFIG } from "@/config";

// Remove current url path, trailing slash, and .html extension if exists
const currentUrlPath = Astro.url.pathname
  .replace(/\/+$/, "")
  .replace(/\.html$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts") {
  breadcrumbList.splice(0, 2, `Posts (page ${breadcrumbList[1] || 1})`);
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${Number(breadcrumbList[2]) === 1 ? "" : "(page " + breadcrumbList[2] + ")"}`
  );
}

// if breadcrumb is Home > project > [project-type] > page <etc>
// replace with Home > Projects > [Project Name] (page number)
if (breadcrumbList[0] === "project" && breadcrumbList.length >= 3) {
  const projectType = breadcrumbList[1] as keyof typeof CONTENT_CONFIG.projects;

  if (breadcrumbList[2] === "page") {
    // /project/unity-weekly/page/[number] の場合
    const pageNum = breadcrumbList[3] || 1;
    const projectConfig = CONTENT_CONFIG.projects[projectType];
    const projectName = projectConfig?.title || projectType;
    const pageSuffix = Number(pageNum) === 1 ? "" : ` (page ${pageNum})`;
    breadcrumbList.splice(
      0,
      breadcrumbList.length,
      "Projects",
      `${projectName}${pageSuffix}`.trim()
    );
  }
}
---

<nav class="mx-auto mt-8 mb-1 w-full max-w-app px-4" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href="/" class="opacity-80">Home</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) => {
        // Projectsリンクの修正
        const isProjects = breadcrumb === "Projects";
        const href = isProjects ? "/projects" : `/${breadcrumb}`;

        // Determine if we should use lowercase (only for tags, not for project names)
        const shouldLowercase = index > 0 && breadcrumbList[0] !== "Projects";

        return index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: shouldLowercase }]}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a href={href} class="capitalize opacity-70">
              {breadcrumb}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        );
      })
    }
  </ul>
</nav>
