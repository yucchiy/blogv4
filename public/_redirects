# Redirect trailing slashes to non-trailing slash URLs
# Cloudflare Pages redirects

# Top-level pages
/profile/ /profile 301
/posts/ /posts 301
/projects/ /projects 301
/about/ /about 301
/archives/ /archives 301
/search/ /search 301
/tags/ /tags 301

# Tag pages
/tags/:tag/ /tags/:tag 301

# Project pages
/project/:slug/ /project/:slug 301
/project/:project/:slug/ /project/:project/:slug 301
/project/:project/:slug/:number/ /project/:project/:slug/:number 301
